@model AdministationNewsEditViewModel
@{
    ViewBag.Title = "Edit News";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "NewsDefault.jpg");
}


    <form enctype="multipart/form-data" asp-controller="AdministrationNews" asp-action="Edit" method="post" class="mt-3">
        <input hidden asp-for="Id" />
        <input hidden asp-for="ExistingPhotoPath" />
        <div class="form-group row">
            <label asp-for="Titre" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Titre" class="form-control" placeholder="Titre" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="TexteLibre" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TexteLibre" class="form-control" placeholder="TexteLibre" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Cliquez ici pour changer de photo</label>
                </div>
            </div>
        </div>

        <div class="form-group row col-sm-4 offset-4">
            <img src="@photoPath" class="imageThumbnail" asp-append-version="true" />
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Mettre à jour</button>
                <a asp-controller="AdministrationNews" asp-action="index" class="btn btn-primary">Annuler</a>
            </div>
        </div>

        @section Scripts{

            <script src="~/js/UploadFiles.js"></script>
            <script src="~/js/Toastr.js"></script>
        }

    </form>


