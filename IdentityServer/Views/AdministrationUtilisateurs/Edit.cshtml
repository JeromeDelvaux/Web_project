@model UserEditViewModel
@{
    ViewBag.Title = "Editer Utilisateur";
}


    <form enctype="multipart/form-data" asp-controller="AdministrationUtilisateurs" asp-action="edit" method="post" class="mt-3">
        <input hidden asp-for="Id" />
        <input hidden asp-for="User.Professionel" />
        <div class="form-group row">
            <label asp-for="User.Nom" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="User.Nom" class="form-control" placeholder="Prenom" />
                <span asp-validation-for="User.Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="User.Prenom" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="User.Prenom" class="form-control" placeholder="Prenom" />
                <span asp-validation-for="User.Prenom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="User.Sexe" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                @*Html.GetEnumSelectList<Dept>() me permet d'aller rechercher mes enumerations qui se trouvent dans mon modele "SexeUser"*@
                <select asp-for="User.Sexe" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<MesModels.ClassesEnum.SexeUser>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="User.Sexe" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="User.Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="User.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="User.PhoneNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="User.PhoneNumber" class="form-control" placeholder="Telephone" />
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="User.DateNaissance" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="User.DateNaissance" class="form-control" placeholder="DateNaissance" />
                <span asp-validation-for="User.DateNaissance" class="text-danger"></span>
            </div>
        </div>
        <h4 class="text-center">Vos Identitfiants</h4>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="NewPassword" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NewPassword" class="form-control" placeholder="Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        @*ligne de code me permettant d'afficher les validations manquantes lors de la création'*@
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a asp-controller="home" asp-action="RetourWebProject" class="btn btn-primary">Annuler</a>
            </div>
        </div>

        @section Scripts{

            <script src="~/js/UploadFiles.js"></script>
        }

    </form>


